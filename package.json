{
  "name": "gridea-neo",
  "version": "1.0.0",
  "private": "true",
  "description": "A static blog writing client. You can use it to record your life, mood, knowledge, notes and ideas...",
  "author": {
    "name": "init0xyz",
    "email": "laiyilong0@gmail.com"
  },
  "homepage": "https://www.electronjs.org",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "prepare": "husky install",
    "commit": "git-cz --disable-emoji"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "@vueuse/core": "^9.12.0",
    "electron-updater": "^5.3.0",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.2",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "16.18.11",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue-macros/volar": "^0.8.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.17",
    "eslint": "^8.31.0",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.3",
    "less": "^4.1.3",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.2",
    "typescript": "^4.9.4",
    "unocss": "^0.49.4",
    "unplugin-auto-import": "^0.14.2",
    "unplugin-vue-components": "^0.23.0",
    "unplugin-vue-macros": "^1.7.3",
    "vite": "^4.0.4",
    "vite-plugin-pages": "^0.28.0",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.22"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{ts,vue,md,json,yaml}": "eslint --fix"
  }
}
